---
layout: layouts/base.njk
permalink: "/blog/{{ page.date | date('YYYY/MM/DD') }}/{{ page.fileSlug }}/"
---

{% section "text-center novpadding" %}

# {{ title | localize }}
{{ subtitle | localize }}

{% endsection %}

{% section %}
{{ content | safe }}
{% endsection %}

{% section "dark" %}
#### {{ { en: "More Posts", de: "Mehr Beiträge" } | localize }}
{% flexbox "row", "flex-wrap: wrap; text-align: center;" %}
{%- for post in collections.blog | reverse -%}
  <!-- Show 6 latest news. -->
  {% if loop.index0 < 6 and page.url != post.url %}
  {% flex %}
  {{ post.date | date("YYYY-MM-DD") }}

  [{{ post.data.title }}]({{ post.url | url }})

  {{ post.data.excerpt }}
  {% endflex %}
  {% endif %}
  {% if loop.index0 == 6 %}
  {% flex %}
  [{{ { en: "All Posts", de: "Alle Beiträge" } | localize }}]({{ "/blog/" | url }})
  {% endflex %}
  {% endif %}
{%- endfor -%}
{% endflexbox %}

{% endsection %}
